<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/colorWhite"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/article_img"
                android:contentDescription="article image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:src="@drawable/applicable"/>
            <TextView
                android:id="@+id/article_title"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:background="#A6FFFFFF"
                android:text="Lorem Ipsum"
                android:textSize="20sp"
                android:maxLines="2"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/article_img"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/article_desc"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Lorem Ipsum dolor Amen sut aas eze"
                android:layout_below="@id/article_title"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                android:maxLines="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/article_desc"
                android:orientation="horizontal"
                android:background="#A6FFFFFF"
                android:layout_height="wrap_content">
                <ImageView
                    android:contentDescription="icon"
                    android:id="@+id/article_icon"
                    android:layout_width="wrap_content"
                    android:tint="@color/colorSecondary"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_joali"/>
                <TextView
                    android:id="@+id/article_edition"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Edition #000 du 20 au 27/08/2019"
                    android:layout_height="match_parent" />
                <ImageView
                    android:contentDescription="icon"
                    android:id="@+id/article_like"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_favorite"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>