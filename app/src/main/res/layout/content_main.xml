<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/containers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:ntb_bg_color="@color/colorWhite"
        app:ntb_badged="false"
        app:ntb_typeface="serif"
        app:ntb_title_size="12sp"
        app:ntb_scaled="true"
        app:ntb_active_color="@color/colorSecondary"
        app:ntb_inactive_color="@color/colorPrimary"
        app:ntb_tinted="true"
        app:ntb_title_mode="active"
        app:ntb_titled="true"
        app:ntb_swiped="true"/>

</LinearLayout>